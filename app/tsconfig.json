{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Esto permite usar rutas relativas desde la ra√≠z del proyecto
    "paths": {
      "@components/*": ["./src/components/*"],
      "@context/*": ["./src/context/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@backend/*": ["./convex/_generated/*"],
      "@lib/*": ["./src/lib/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/context/AuthContext.tsx",
    "src/components/Post/Post.story.tsx",
    "src/components/Comment/CommentTesting.js",
    ".next/types/**/*.ts"
, "src/context/providers.tsx", "src/components/PostHogPageView.tsx", "../scripts/deleteuser.ts", "../scripts/migration.ts"  ],
  "exclude": [
    "node_modules"
  ],
}
